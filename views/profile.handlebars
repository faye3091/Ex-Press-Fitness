<div class="row">
  <div class="col-auto">
    <h2>Have a great workout, {{name}}!</h2>
  </div>
</div>

<div class="selection">
  <div class="col-md-6">
    <h3>Choose a Muscle Group:</h3>

    <div class="body-parts">
      <button type="submit" class="btn">Chest</button>
      <button type="submit" class="btn">Back</button>
      <button type="submit" class="btn">Shoulders</button>
      <button type="submit" class="btn">Legs</button>
      <button type="submit" class="btn">Biceps</button>
      <button type="submit" class="btn">Triceps</button>
      <button type="submit" class="btn">Abs</button>
    </div>
  </div>

  {{#if favorites.length}}
    <div class="col-md-6 project-list">
      <h3>Current Projects:</h3>

      {{#each favorites as |project|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{project.id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>